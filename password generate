└─$ cat password.sh         
#!/bin/bash

# Function to generate a random password
generate_password() {
    # Get user input for password length and strength
    local length=$1
    local include_special=$2
    local include_numbers=$3
    local include_uppercase=$4

    # Set character sets based on user input
    local char_set="abcdefghijklmnopqrstuvwxyz"
    if [[ "$include_uppercase" == "yes" ]]; then
        char_set+="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
    fi
    if [[ "$include_numbers" == "yes" ]]; then
        char_set+="0123456789"
    fi
    if [[ "$include_special" == "yes" ]]; then
        char_set+="!@#$%^&*()-_=+[]{};:,.<>?"
    fi

    # Generate the password
    local password=""
    for (( i=0; i<length; i++ )); do
        password+="${char_set:RANDOM%${#char_set}:1}"
    done

    # Return the password
    echo "$password"
}

# Main script
echo "Welcome to the random password generator!"
read -p "Enter desired password length: " length
read -p "Include special characters? (yes/no): " include_special
read -p "Include numbers? (yes/no): " include_numbers
read -p "Include uppercase letters? (yes/no): " include_uppercase

# Call the function and display the password
generated_password=$(generate_password $length $include_special $include_numbers $include_uppercase)
echo "Generated Password: $generated_password"


      
